#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

ARCH = $(shell dpkg-architecture -qDEB_HOST_ARCH)

PACKAGE = partman-efi

ifneq (,$(findstring :$(ARCH):,:i386:amd64:))
GPTSYNC_DEPENDS = gptsync-udeb
endif

build:
# Ye olde no-op.

clean:
	dh_testdir
	dh_testroot
	rm -f `find . -name '*~'`
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	debian/install-rc choose_method
	debian/install-rc finish.d
	debian/install-rc commit.d
	debian/install-rc init.d
	debian/install-rc update.d
	dh_install parted_names lib/partman
	rm -rf `find debian/$(PACKAGE) -name CVS`
	rm -rf `find debian/$(PACKAGE) -name .svn`

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	dh_fixperms
	dh_installdeb
ifdef GPTSYNC_DEPENDS
	dh_gencontrol -- -Vgptsync:Depends='$(GPTSYNC_DEPENDS)'
else
	dh_gencontrol
endif
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
