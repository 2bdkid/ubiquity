#!/usr/bin/make -f

export DH_OPTIONS

build:
	dh_testdir

clean:
	dh_testdir
	dh_testroot
	dh_clean debian/user-setup.templates

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_install -i

binary-indep: DH_OPTIONS=-i
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	cp -a debian/user-setup-udeb.templates debian/user-setup.templates
	dh_installdebconf
	sed -e 's,Template: debian-installer/user-setup-udeb/title,Template: oem-config/menu/user-setup,' \
		< debian/user-setup-udeb/DEBIAN/templates \
		> debian/user-setup/usr/lib/oem-config/menu/user-setup.templates
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_python -V2.4
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_builddeb

binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
